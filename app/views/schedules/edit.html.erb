<html>
<head>
<meta HTTP-EQUIV="Content-Type" CONTENT="text/html; charset=SHIFT_JIS">
<title>Sample</title>
</head>
<body>
  <%d= Date.today %>
    <% c= ["日","月","火","水","木","金","土"]%>

  <div class="users-new-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-4 col-md-4 users-new-container">
          <h1 class="text-center text-white"><%=d.strftime("%Y年%m月%d日")%></h1>
          <%=form_for @a ,url:schedule_path do |f| %>
            <div class="form-group">
              <%= f.label :selection, "勤務区分", class: "text-white" %>
<%= f.select :selection, [["-"],["出勤"], ["有給"], ["休み"]],{}, {class: 'form-control'}%>
            </div>
            <div class="form-group ">
              <%= f.label "開始：時間", class: "text-white " %>
              <%= f.time_field :start_time,class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "終了：時間", class: "text-white" %>
              <%= f.time_field :end_time,class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "休憩：時間", class: "text-white" %>
              <%= f.time_field :break,class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "作業日報", class: "text-white" %>
              <%= f.text_area :description,class: "form-control" %>
            </div>

            <%= f.submit "登録する", class: "btn-block btn-white" %>
          <% end %>
           <%= link_to '勤務一覧へ', schedules_path,class: 'text-white' %>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
