<!DOCTYPE html>
<html>
  <head>
    <title>kintai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container ">
        <span class="logo-img">
        <%= link_to root_path do %>
        <%= image_tag "icons/logo2.png"%>
      <% end %>
      </span>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <%= link_to '/admin/login' do %>
            <%= image_tag "icons/kanri.png" %>
          <% end %>
        </li>
      <li>
        <%= link_to dakokus_path do %>
        <%= image_tag "icons/clock.png" %>
      <% end %>
    </li>
    <li>
      <%= link_to schedules_path do %>
      <%= image_tag "icons/calendar.png" %>
      <% end %>
  </li>
  <li>
    <%= link_to logout_path, method: :delete do %>
    <%= image_tag "icons/logout.png" %>
  <% end %>
</li>
<% else %>
  <li><%= link_to '/admin/login' do %>
    <%= image_tag "icons/kanri.png" %>
  <% end %>
</li>
<li>
  <%= link_to users_new_path do %>
  <%= image_tag "icons/register.png" %>
<% end %>
</li>
<li><%= link_to sessions_new_path do %>
<%= image_tag "icons/login.png" %>
<% end %></li>
<% end %>
</ul>
</div>
</nav>
<%= yield %>
<script>

$(function () {
$(".alert").fadeOut(5000);
});
</script>
</body>
</html>
